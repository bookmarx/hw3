<!-- Edit Modal -->
<div id="openEditModal" class="modal-dialog">
    <section>
        <form action="/v1/bm/edit/<%= modals.editModal.bookmark_id %>" method="POST">
            <header class="modal-header dark-primary-color">
                <h2>Edit Bookmark</h2>
            </header>
            <div class="modal-body">
                <label for="name-edit">Name</label>
                <input type="text" placeholder="Name" id="name-edit" value="<%= modals.editModal.title %>" name="title">
                <label for="address-edit">URL</label>
                <input type="text" placeholder="URL" id="address-edit" value="<%= modals.editModal.url %>" name="url">
                <label for="description-edit">Description</label>
                <textarea placeholder="Description" id="description-edit" name="description"><%= modals.editModal.description %></textarea>
                <label for="keyword-edit">Keyword</label>
                <input type="text" placeholder="Keyword" id="keyword-edit" value="<%= modals.editModal.keywords %>" name="keywords">
            </div>
            <footer class="modal-footer">
                <!-- <a href="#close" title="Close" class="button">Delete</a> -->
                <a href="#close" title="Close" class="button button-danger">Delete</a>
                <a href="/v1/bm/" title="Close" class="button">Cancel</a>
                <button type="submit" class="button button-primary">Save</button>

            </footer>
        </form>
    </section>
</div>
